<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.cutiko.stressless.views.details.DetailsActivity">

    <EditText
        android:id="@+id/descriptionEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="14dp"
        android:background="@drawable/bg_white_bordered_primary_light"
        android:hint="@string/description_hint"
        android:lines="5"
        android:padding="8dp"
        android:textColorHint="@color/colorGray" />

    <EditText
        android:id="@+id/categoryEt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/descriptionEt"
        android:background="@drawable/bg_white_bordered_primary_light"
        android:hint="@string/description_hint"
        android:maxLines="1"
        android:padding="8dp"
        android:singleLine="true"
        android:textColorHint="@color/colorGray" />

    <ImageButton
        android:id="@+id/categoryBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/descriptionEt"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/categoryEt"
        android:background="@drawable/bg_primary"
        android:padding="8dp"
        android:src="@mipmap/ic_add_white_24dp" />

    <Spinner
        android:id="@+id/categoryDd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/categoryEt"
        android:layout_marginTop="14dp"
        android:dropDownSelector="@mipmap/ic_launcher"
        android:background="@color/colorPrimary" />

</RelativeLayout>
